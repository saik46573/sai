package methods;
class Palindrome1
{
	int n;
	public void Palin()
	{
		for(int y=n;y>0;y/=10)
		{   int rev=0;
			int rem=y%10;
			rev=rev*10+rem;
		}
	}
	public void checkPalin()
	{
		if(rev==n)
		{
			System.out.println("palin drome");
		}
		else
		{
			System.out.println("not a palindrome");
		}
	}
}

public class Palindrome 
{

	public static void main(String[] args)
	{
		Palindrome1 p=new Palindrome1();
		p.n=1210;
		p.Palin();
		p.checkPalin();

	}

}
