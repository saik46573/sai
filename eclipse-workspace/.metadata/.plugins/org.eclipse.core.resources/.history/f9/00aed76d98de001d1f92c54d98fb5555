package methods;

public class Patternmethod 
{

	public static void main(String[] args)
	{
		int x,y,s;
		for(x=3;x>=1;x--)
		{
			for(s=1;s<x;s++)
			{
				System.out.print(" ");
			}
			for(y=x;y<=3;y++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
		for(y=x;y<=3;y++)
		{
			System.out.print("*");
		}
		

	}

}
