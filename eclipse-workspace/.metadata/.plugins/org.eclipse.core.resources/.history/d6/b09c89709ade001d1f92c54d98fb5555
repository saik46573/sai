class pattern1
{
	public void create()
	{
		int x,y,s;
		for(x=3;x>=1;x--)
		{
			for(s=1;s<x;s++)
			{
				System.out.print(" ");
			}
			for(y=x;y<=3;y++)
			{
				System.out.print("*");
			}
			for(y=x;y<3;y++)
			{
				System.out.print("*");
			}
			
			System.out.println();
		}

	}
	public void create1()
	{
		int x,y,s;
		for(x=1;x<=2;x++)
		{
			for(s=1;s<x;s++)
			{
				System.out.print("  ");
			}
			for(y=x;y<=2;y++)
			{
				System.out.print("#");
			}
			for(y=x;y<2;y++)
			{
				System.out.print("#");
			}
			
			System.out.println();
		}
	}
}

